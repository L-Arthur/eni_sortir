{% extends 'base.html.twig' %}

{% block header %}
    <header>
        <div class="logo-title">
            <h1>LOGO Sortir.com</h1>
        </div>
    </header>
{% endblock %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un lien
                pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoi du mot de passe par e-mail</button>
    {{ form_end(requestForm) }}
{% endblock %}
