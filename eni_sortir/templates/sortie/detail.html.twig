{% extends 'base.html.twig' %}

{% block title %}
    Sortie
{% endblock %}

{% block body %}
    <section class="detail-sortie">
        <h2>Afficher une sortie</h2>
        <div class="detail-sortie-list">
            <div class="elem-detail-sortie">
                <p>Nom de la sortie :</p>
                <p>{{ sortie.nom }}</p>
            </div>
            <div class="elem-detail-sortie">
                <p>Date et heure de la sortie :</p>
                <p>{{ sortie.dateHeureDebut | date('d/m/y H:i') }}</p>
            </div>
            <div class="elem-detail-sortie">
                <p>Date limite d'inscription :</p>
                <p>{{ sortie.dateLimiteInscription| date('d/m/y H:i') }}</p>
            </div>
            <div class="elem-detail-sortie">
                <p>Nombre de place :</p>
                <p>{{ sortie.nbInscriptionsMax }}</p>
            </div>
            <div class="elem-detail-sortie">
                <p>Dur√©e :</p>
                <p>{{ sortie.duree }} minutes</p>
            </div>
        </div>
        <div class="detail-sortie-list">
            <div class="elem-detail-sortie">
                <p>Campus :</p>
                <p>{{ sortie.campus.nom }}</p>
            </div>
            <div class="elem-detail-sortie">
                <p>Lieu :</p>
                <p>{{ sortie.lieu.nom }}</p>
            </div>
            <div class="elem-detail-sortie">
                <p>Rue :</p>
                <p>{{ sortie.lieu.rue }}</p>
            </div>
            <div class="elem-detail-sortie">
                <p>Code postal :</p>
                <p>{{ sortie.lieu.ville.codePostal }}</p>
            </div>
            <div class="elem-detail-sortie">
                <p>Latitude :</p>
                <p>{{ sortie.lieu.latitude }}</p>
            </div>
            <div class="elem-detail-sortie">
                <p>Longitude :</p>
                <p>{{ sortie.lieu.longitude }}</p>
            </div>
        </div>
    </section>
    <section class="elem-detail-infos">
        <p>
            Description et info
        </p>
        <p>{{ sortie.infosSortie }}</p>
    </section>
    <div class="list-participant">
        <table class="tableau-sorties tableau-detail">
            <thead>
            <tr>
                <th>Pseudo</th>
                <th>Nom</th>
            </tr>
            </thead>
            {% for participant in sortie.inscrits %}
                <tr>
                    <td><a href="{{ path('app_profil_details', {'id': participant.id}) }}">{{ participant.pseudo }}</a>
                    </td>
                    <td>{{ participant.prenom }} {{ participant.nom }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}

